<h1>Fitness App</h1>
<h3>Edit goals for <%= @user.username %></h3>
<form action="/goals" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
    Start Weight: <input type="number" name="start_weight" value="<%= @user.start_weight %>" step="0.01" min="0" max="300">
    <br>
    Start Body Fat: <input type="number" name="start_bodyfat" value="<%= (@user.start_bodyfat.to_f*100).round(2) %>" step="0.01" min="0" max="50">%
    <br>
    Weight Goal: <input type="number" name="weight_goal" value="<%= @goals.weight_goal %>">
    <br>
    Body Fat Goal: <input type="number" name="body_fat_goal" value="<%= (@goals.body_fat_goal.to_f*100).round(2) %>" step="0.01" min="0" max="50">%
    <br>
    Start Calorie Goal: <input type="number" name="start_calorie_goal" value="<%= @goals.start_calorie_goal %>">
    <br>
    <input type="submit" value="Update">
</form>
<br>
<h4><a href="/users/<%= @user.slug %>"><button>My Diary</button></a></h4>
<h4><a href="/logout"><button>My Diary</button></a></h4>   
<h4><a href="/logout"><button>Log Out</button></a></h4>