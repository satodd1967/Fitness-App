<h1>Fitness App</h1>
<h2>Diary for <%= @user.username %></h2>
<br>
<h4><a href="/logs/new"><button>New Log Entry</button></a></h4>
<h4><a href="/logs"><button>Public Diary</button></a></h4>
<h4><a href="/goals/edit"><button>Edit Goals</button></a></h4>
<h4><a href="/logout"><button>Log Out</button></a></h4>
<br>
<h2>Goals for <%= @user.username %></h2>
<h4>Starting Information</h4>
<ul>
    <li>Start Weight: <%= @user.start_weight %></li>
    <li>Start Body Fat: <%= @user.start_bodyfat.round(2)*100 %>%</li>
<ul>
<br>
<h4>Current Goals</h4>
<ul>
    <li>Weight Goal: <%= @goals.weight_goal %></li>
    <li>Body Fat Goal: <%= @goals.body_fat_goal.round(2)*100 %>%</li>
    <li>Start Calorie Goal: <%= @goals.start_calorie_goal %></li>
    <br>
</ul>
<h2>Diary Entries</h2>
<% @logs.order(:date).reverse.each do |log| %>
    <ul>
        <li><h4>Log Date: <%= log.date %></h4></li>
        <li>Worked Out: <%= binary_convert(log.worked_out) %></li>
        <li>Tracked Food: <%= binary_convert(log.tracked_food) %></li>
        <li>Weight: <%= log.weight %></li>
        <li>Body Fat: <%= (log.body_fat.to_f*100).round(2) %>%</li>
        <li>Active Calories: <%= log.active_calories %></li>
        <li>Calories: <%= log.calories %></li>
        <% if current_user == User.find(log.user.id) %>
            <li><a href="/logs/<%= log.id %>"><button>View/Edit Log</button></a></li>
        <% end %>
        <br>
    </ul>
    <% end %>